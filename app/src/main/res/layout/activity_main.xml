<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/tv_valorinicial"
            android:layout_width="288dp"
            android:layout_height="49dp"
            android:hint="Valor Inicial"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.309"/>
    <Button
            android:id="@+id/btn_contador"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:text="Iniciar Contador"
            android:onClick="startCounter"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.506" app:layout_constraintVertical_bias="0.612"/>
    <Button
            android:id="@+id/btn_calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Calculadora"
            android:onClick="startCalculator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>